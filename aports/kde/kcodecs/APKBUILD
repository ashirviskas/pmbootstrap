# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kcodecs
pkgver=5.42.0
pkgrel=0
pkgdesc='Provide a collection of methods to manipulate strings using various encodings'
arch="all"
url='https://community.kde.org/Frameworks'
license="LGPL-2.1"
depends=""
makedepends="extra-cmake-modules qt5-qttools-dev gperf doxygen"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	make
}

check() {
	cd "$builddir"
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	cd "$builddir"
	make DESTDIR="${pkgdir}" install
}
sha512sums="235c6b7b3a447b3bb87db5900048ed7bdb35b900c6ca486461ff01f8f2b020ae9757788d772bd886709b545be7d463730e143fa5fa91d08b8ec564428aaa3e58  kcodecs-5.42.0.tar.xz"
